rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection - users can read all profiles but only write their own
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Groups collection
    match /groups/{groupId} {
      // Allow read to all authenticated users (needed for shared links to work)
      // Auto-join will add user to userIds after reading
      allow read: if isAuthenticated();

      // Allow create if authenticated
      allow create: if isAuthenticated();

      // Allow update if user is in the group's userIds array OR if adding self to userIds
      allow update: if isAuthenticated() &&
                       (resource.data.userIds == null ||
                        request.auth.uid in resource.data.userIds ||
                        request.auth.uid in request.resource.data.userIds);

      // Allow delete if user is the group owner
      allow delete: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid);

      // Expenses subcollection - allow access to all authenticated users
      // (user will be auto-added to group on first visit)
      match /expenses/{expenseId} {
        allow read, write: if isAuthenticated();
      }
    }

    // Deny all other documents by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
