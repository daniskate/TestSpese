rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection - users can read all profiles but only write their own
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Groups collection
    match /groups/{groupId} {
      // Allow read if user is in the group's userIds array
      allow read: if isAuthenticated() &&
                     (resource.data.userIds == null ||
                      request.auth.uid in resource.data.userIds);

      // Allow create if authenticated
      allow create: if isAuthenticated();

      // Allow update if user is in the group's userIds array
      allow update: if isAuthenticated() &&
                       (resource.data.userIds == null ||
                        request.auth.uid in resource.data.userIds);

      // Allow delete if user is the group owner
      allow delete: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid);

      // Expenses subcollection
      match /expenses/{expenseId} {
        allow read, write: if isAuthenticated() &&
                              (get(/databases/$(database)/documents/groups/$(groupId)).data.userIds == null ||
                               request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.userIds);
      }
    }

    // Deny all other documents by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
